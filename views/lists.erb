<!--lists.erb-->
<% if lists.empty? %>
  <div id="no_list"></div>
<% else %>
  <ul id="lists">
    <% lists.each_with_index do |list, idx| %>
      <li >
        <a href="/lists/<%= idx %>">
          <h2><%= list[:name] %></h2>
          <p><%= list[:todos].size %></p>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>
